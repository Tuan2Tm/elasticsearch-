# Development Environment Configuration
COMPOSE_PROJECT_NAME=elastic-local-dev

# Elasticsearch Configuration
ELASTICSEARCH_IMAGE=docker.elastic.co/elasticsearch/elasticsearch:8.15.0
ELASTICSEARCH_CONTAINER_NAME=elasticsearch-dev
ELASTICSEARCH_PORT_HTTP=9200
ELASTICSEARCH_PORT_TRANSPORT=9300
ELASTIC_PASSWORD=dev_password_123
ES_JAVA_OPTS=-Xms1g -Xmx1g
ELASTICSEARCH_DATA_VOLUME=esdata-dev

# Kibana Configuration
KIBANA_IMAGE=docker.elastic.co/kibana/kibana:8.15.0
KIBANA_CONTAINER_NAME=kibana-dev
KIBANA_PORT=5601
KIBANA_SERVERNAME=kibana-dev
KIBANA_SERVER_HOST=0.0.0.0

# Security Configuration
X_PACK_SECURITY_ENABLED=true
X_PACK_SECURITY_HTTP_SSL_ENABLED=false
X_PACK_SECURITY_TRANSPORT_SSL_ENABLED=false
DISCOVERY_TYPE=single-node
